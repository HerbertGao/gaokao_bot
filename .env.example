# Application Configuration
APP_NAME=gaokao_bot
APP_ENV=dev
APP_PORT=8080

# Telegram Bot Configuration
TELEGRAM_BOT_USERNAME=gaokao_bot
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567890
TELEGRAM_MINIAPP_URL=https://your-miniapp-url.com

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=gaokao
DB_USERNAME=root
DB_PASSWORD=YourSecurePassword123
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Asia/Shanghai

# Database Connection Pool
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=20
DB_CONN_MAX_LIFETIME=900

# Snowflake ID Generator
SNOWFLAKE_DATACENTER_ID=1
SNOWFLAKE_MACHINE_ID=1

# Logging
# LOG_LEVEL: debug, info, warn, error (debug 级别会启用 GIN HTTP 访问日志)
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_OUTPUT=stdout

# Scheduled Tasks
TASK_DAILY_SEND_ENABLED=true
TASK_DAILY_SEND_CRON=0 0 * * * *

# CORS Configuration
# 允许的跨域来源列表（逗号分隔）
# 开发环境示例
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# 生产环境示例（需要添加实际的前端域名）
# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com
