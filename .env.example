# Application Configuration
APP_NAME=gaokao_bot
APP_ENV=dev
APP_PORT=8080

# Telegram Bot Configuration
TELEGRAM_BOT_USERNAME=gaokao_bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_MINIAPP_URL=https://your-miniapp-url.com

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=gaokao
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Asia/Shanghai

# Database Connection Pool
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=20
DB_CONN_MAX_LIFETIME=900

# Snowflake ID Generator
SNOWFLAKE_DATACENTER_ID=1
SNOWFLAKE_MACHINE_ID=1

# Logging
# LOG_LEVEL: debug, info, warn, error (debug 级别会启用 GIN HTTP 访问日志)
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_OUTPUT=stdout

# Scheduled Tasks
TASK_DAILY_SEND_ENABLED=true
TASK_DAILY_SEND_CRON='0 0 * * * *'
